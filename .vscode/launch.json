{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Dir", // 名字改成这个，含义更清晰
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}", // ⚠️ 核心修改：自动识别当前打开文件所在的目录
            "cwd": "${workspaceFolder}", // ⚠️ 保持工作目录在根目录（方便读取 .env 或 conf/）
            "env": {                     // ⚠️ 建议加上：后端开发必用的环境变量
                "GO_ENV": "dev"
            },
            "dlvLoadConfig": {           // ⚠️ 继承你的全局性能配置
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 200      // 既然你在 settings 里配了，这里显式加上更稳
            }
        }
    ]
}